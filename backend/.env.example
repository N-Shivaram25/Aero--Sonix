# Backend environment example for Vercel
# Copy to .env locally for development (do NOT commit secrets)

PORT=5001
MONGO_URI=your_mongo_uri_here
JWT_SECRET_KEY=your_jwt_secret_here
FRONTEND_URL=https://aero-sonix-stream.vercel.app
NODE_ENV=production

# Stream Video SDKs
STREAM_API_KEY=your_stream_api_key
STREAM_API_SECRET=your_stream_api_secret

# Voice AI Services
ELEVENLABS_API_KEY=your_elevenlabs_api_key
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Translation & Speech-to-Text
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
# Alternative: Use service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Default Voice IDs
MALE_VOICE_ID=your_default_male_voice_id
FEMALE_VOICE_ID=your_default_female_voice_id
